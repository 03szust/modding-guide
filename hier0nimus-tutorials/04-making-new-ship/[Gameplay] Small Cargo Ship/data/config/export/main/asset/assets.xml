            <Template>TradeShip</Template>
            <Values>
                <Standard>
                    <GUID>1742008813</GUID>
                    <Name>Small Cargo Ship</Name>
                    <IconFilename>data/graphics/icons/icon_small_cargo_ship.png</IconFilename>
                    <InfoDescription>1742008814</InfoDescription>
